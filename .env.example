# ===========================================
# PROBUILD ERP - Environment Variables
# ===========================================
# Copy this file to .env and fill in your values

# ==================
# REQUIRED VARIABLES
# ==================

# PostgreSQL Database URL (Railway provides this automatically when you add PostgreSQL)
DATABASE_URL=postgresql://user:password@host:5432/dbname

# Session secret - CHANGE THIS IN PRODUCTION (use a random 32+ character string)
SESSION_SECRET=change-this-to-a-random-string-in-production

# Environment
NODE_ENV=production

# Port (Railway sets this automatically, default 5000)
PORT=5000

# ==================
# OPTIONAL - Payments (Stripe)
# ==================
STRIPE_SECRET_KEY=sk_live_...
STRIPE_WEBHOOK_SECRET=whsec_...

# ==================
# OPTIONAL - SMS & Calling (Twilio)
# ==================
TWILIO_ACCOUNT_SID=AC...
TWILIO_AUTH_TOKEN=...
TWILIO_API_KEY=SK...
TWILIO_API_SECRET=...
TWILIO_PHONE_NUMBER=+1...
TWILIO_TWIML_APP_SID=AP...

# ==================
# OPTIONAL - Voice Transcription (Deepgram)
# ==================
DEEPGRAM_API_KEY=...

# ==================
# OPTIONAL - AI Features (OpenAI)
# ==================
AI_INTEGRATIONS_OPENAI_API_KEY=sk-...

# ==================
# OPTIONAL - Banking Data (Basiq)
# ==================
BASIQ_API_KEY=...
BASIQ_CONTACT_EMAIL=...
BASIQ_CONTACT_MOBILE=...

# ==================
# BUSINESS CONFIG
# ==================
PROBUILD_ABN=29688327479
